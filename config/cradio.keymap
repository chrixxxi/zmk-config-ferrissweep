        };
        td_i3_f10: tap_dance_i3_f10 {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_I3_F10";
            #binding-cells = <0>;
            tapping-term-ms = <TAP_TERM_DEFAULT>;
            bindings = <&kp LA(F10)>, <&kp LA(LS(F10))>;
        };
        td_i3_f11: tap_dance_i3_f11 {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_I3_F11";
