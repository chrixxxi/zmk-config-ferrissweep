#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define TAP_TERM_DEFAULT 200

// Home row mods macro
#define HRML(k1,k2,k3) &ht LALT k1  &ht LCTRL k2  &ht LSHFT k3
#define HRMR(k1,k2,k3) &ht RSHFT k1  &ht LCTRL k2  &ht RALT k3
#define L_GREEN 0
#define L_RED 1
#define L_BLUE 2
#define L_YELLOW 3
#define L_GAMING 4

// Makro creation
#define MACRO(name, keys)                 \
name: name##_macro {                      \
    label          = #name;               \
    compatible     = "zmk,behavior-macro";\
    tap-ms         = <1>;                 \
    wait-ms        = <1>;                 \
    #binding-cells = <0>;                 \
    bindings       = <keys>;              \
};

/ {
    behaviors {
        ht: hold_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <0>;
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
        };

        td_sem_dqt: tap_dance_sem_dqt {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_SEM_DQT";
            #binding-cells = <0>;
            tapping-term-ms = <TAP_TERM_DEFAULT>;
            bindings = <&kp SEMI>, <&kp SQT>;
        };
        td_com_tab: tap_dance_com_tab {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_COM_TAB";
            #binding-cells = <0>;
            tapping-term-ms = <TAP_TERM_DEFAULT>;
            bindings = <&kp COMMA>, <&kp TAB>;
        };
        td_brc: tap_dance_brc {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_BRC";
            #binding-cells = <0>;
            tapping-term-ms = <TAP_TERM_DEFAULT>;
            bindings = <&kp LBKT>, <&kp RBKT>;
        };
        td_cbr: tap_dance_cbr {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_CBR";
            #binding-cells = <0>;
            tapping-term-ms = <TAP_TERM_DEFAULT>;
            bindings = <&kp LBRC>, <&kp RBRC>;
        };
        td_rbr: tap_dance_rbr {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_RBR";
            #binding-cells = <0>;
            tapping-term-ms = <TAP_TERM_DEFAULT>;
